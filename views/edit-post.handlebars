<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" data-id="{{post.id}}" />

    <label class="form-label" for="post-title">Title</label>
    <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="form-input form-control" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" id="post-body" class="form-input form-control">{{post.body}}</textarea>

    <button type="submit" class="btn btn-block btn-secondary">Update</button>

    <button type="button" id="delete-btn " class="btn btn-block btn-secondary">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>
